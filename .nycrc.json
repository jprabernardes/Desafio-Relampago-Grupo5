{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "reporter": ["html", "text", "lcov", "text-summary"],
  "exclude": [
    "tests/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules/**",
    "dist/**",
    "coverage/**",
    "**/*.d.ts"
  ],
  "cache": true,
  "temp-dir": "./.nyc_output",
  "report-dir": "./coverage"
}
